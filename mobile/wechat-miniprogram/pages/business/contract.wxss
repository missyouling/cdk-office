/* pages/business/contract.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.search-bar {
  display: flex;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.search-input {
  flex: 1;
  padding: 30rpx;
  font-size: 28rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
}

.search-btn {
  margin-left: 20rpx;
  padding: 30rpx;
  font-size: 28rpx;
  background-color: #007aff;
  color: #fff;
  border-radius: 10rpx;
  border: none;
}

.create-btn-container {
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}

.create-btn {
  width: 100%;
  padding: 30rpx;
  font-size: 28rpx;
  border-radius: 10rpx;
  border: none;
}

.create-btn.primary {
  background-color: #007aff;
  color: #fff;
}

.contract-list {
  padding: 20rpx 0;
}

.contract-item {
  padding: 30rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.contract-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.contract-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.contract-status {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
}

.contract-status.signed {
  background-color: #e8f4ff;
  color: #007aff;
}

.contract-status.pending {
  background-color: #fff3e0;
  color: #ff9800;
}

.contract-parties {
  margin-bottom: 20rpx;
}

.party {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.contract-meta {
  display: flex;
  justify-content: space-between;
}

.contract-date {
  font-size: 24rpx;
  color: #999;
}

.loading, .no-more, .empty {
  text-align: center;
  padding: 40rpx;
  font-size: 28rpx;
  color: #666;
}