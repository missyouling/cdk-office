/* pages/employee/detail.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.loading, .error {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 600rpx;
  font-size: 28rpx;
  color: #666;
}

.employee-header {
  text-align: center;
  padding: 40rpx;
  margin-bottom: 20rpx;
}

.employee-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.employee-position {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 20rpx;
}

.employee-department {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 20rpx;
}

.employee-status {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  display: inline-block;
}

.employee-status.active {
  background-color: #e8f4ff;
  color: #007aff;
}

.employee-status.inactive {
  background-color: #f0f0f0;
  color: #999;
}

.detail-section {
  padding: 30rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.detail-item {
  display: flex;
  margin-bottom: 20rpx;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.label {
  width: 180rpx;
  font-size: 28rpx;
  color: #666;
}

.value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.action-btn {
  flex: 1;
  padding: 30rpx;
  font-size: 28rpx;
  border-radius: 10rpx;
  border: 2rpx solid #007aff;
  background-color: #fff;
  color: #007aff;
}

.action-btn.primary {
  background-color: #007aff;
  color: #fff;
}

.action-btn.danger {
  border-color: #ff3b30;
  color: #ff3b30;
}

.action-btn.danger.primary {
  background-color: #ff3b30;
  color: #fff;
}