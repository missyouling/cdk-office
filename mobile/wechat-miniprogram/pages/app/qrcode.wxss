/* pages/app/qrcode.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.input-section {
  padding: 30rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.content-input {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  font-size: 28rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  box-sizing: border-box;
}

.action-buttons {
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}

.generate-btn {
  width: 100%;
  padding: 30rpx;
  font-size: 32rpx;
  border-radius: 10rpx;
  border: none;
}

.generate-btn.primary {
  background-color: #007aff;
  color: #fff;
}

.generate-btn[disabled] {
  background-color: #ccc;
  color: #666;
}

.qrcode-section {
  padding: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  text-align: center;
}

.qrcode-image {
  width: 400rpx;
  height: 400rpx;
  margin: 0 auto 30rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
}

.qrcode-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  padding: 20rpx;
  font-size: 28rpx;
  border-radius: 10rpx;
  border: 2rpx solid #007aff;
  background-color: #fff;
  color: #007aff;
}

.error {
  text-align: center;
  padding: 40rpx;
  font-size: 28rpx;
  color: #ff3b30;
}