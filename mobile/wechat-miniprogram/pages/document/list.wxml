<!-- pages/document/list.wxml -->
<view class="container">
  <!-- 搜索栏 -->
  <view class="search-bar">
    <input class="search-input" placeholder="搜索文档" bindinput="onSearchInput" value="{{searchKeyword}}" />
    <button class="search-btn" bindtap="onSearch">搜索</button>
  </view>
  
  <!-- 文档列表 -->
  <view class="document-list">
    <view wx:for="{{documents}}" wx:key="id" class="document-item card" bindtap="goToDocumentDetail" data-id="{{item.id}}">
      <view class="document-info">
        <text class="document-title">{{item.title}}</text>
        <text class="document-description">{{item.description}}</text>
        <view class="document-meta">
          <text class="document-size">{{item.fileSize ? formatFileSize(item.fileSize) : ''}}</text>
          <text class="document-time">{{item.createdAt}}</text>
        </view>
      </view>
    </view>
    
    <!-- 加载更多提示 -->
    <view wx:if="{{loading}}" class="loading">
      <text>加载中...</text>
    </view>
    
    <view wx:elif="{{!hasMore && documents.length > 0}}" class="no-more">
      <text>没有更多数据了</text>
    </view>
    
    <view wx:elif="{{documents.length === 0 && !loading}}" class="empty">
      <text>暂无文档</text>
    </view>
  </view>
</view>