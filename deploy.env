# CDK-Office Deployment Configuration

# Environment variables
export DATABASE_URL=postgresql://cdkoffice:cdkoffice@localhost:5432/cdkoffice?sslmode=disable
export REDIS_URL=redis://localhost:6379/0
export DIFY_API_KEY=your_dify_api_key
export DIFY_BASE_URL=http://localhost:8000
export JWT_SECRET=your_jwt_secret
export APP_ENV=production

# Docker configuration
DOCKER_COMPOSE_FILE=docker-compose.yml
DOCKER_NETWORK_NAME=cdk-office-network

# Database configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cdkoffice
DB_USER=cdkoffice
DB_PASSWORD=cdkoffice

# Redis configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Application configuration
APP_PORT=8080
FRONTEND_PORT=3000

# Backup configuration
BACKUP_DIR=/var/backups/cdk-office
BACKUP_RETENTION_DAYS=30

# Monitoring configuration
MONITORING_ENABLED=true
MONITORING_INTERVAL=60

# Logging configuration
LOG_LEVEL=info
LOG_DIR=/var/log/cdk-office